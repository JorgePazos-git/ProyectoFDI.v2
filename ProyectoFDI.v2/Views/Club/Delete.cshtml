@model ProyectoFDI.v2.Models.Club

@{
    ViewData["Title"] = "Delete";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<h1>ELIMINAR</h1>

<h3>¿Estás seguro de eliminar a este Club?</h3>
<div>
    <h4>Club</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre del Club
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreClub)
        </dd>
    </dl>
    <hr />
    <br />
    <h6>DEPORTISTAS DEL CLUB</h6>
    <table class="table">
        <thead class="table-light">
            <tr>
                <th>
                    Nombres
                </th>
                <th>
                    Apellidos
                </th>
                <th>
                    Cédula
                </th>
                <th>
                    Categoría
                </th>
                <th>
                    Club
                </th>
                <th>
                    Entrenador
                </th>
                <th>
                    Género
                </th>
                <th>
                    Provincia
                </th>
                <th>
                    Modalidad
                </th>
                <th>
                    Usuario
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Deportista)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombresDep)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApellidosDep)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CedulaDep)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCatNavigation.NombreCat)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.NombreClub)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEntNavigation.NombresEnt) @Html.DisplayFor(modelItem => item.IdEntNavigation.ApellidosEnt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdGenNavigation.NombreGen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProNavigation.NombrePro)
                    </td>
                    <td>
                        @foreach (var modalidad in item.DeportistaModalidads)
                        {
                            @Html.DisplayFor(modelItem => modalidad.IdModNavigation.DescripcionMod)
                            <br />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdUsuNavigation.NombreUsu)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdClub" />
        <input type="submit" value="Delete" class="btn btn-outline-secondary" />
        <button type="button" class="btn btn-outline-danger"><a class="boton" asp-action="Index">Regresar</a></button>
    </form>
</div>
