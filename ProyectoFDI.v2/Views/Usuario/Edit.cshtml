@model ProyectoFDI.v2.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<h1>EDITAR</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdUsu" />
            <div class="form-group">
                <label asp-for="NombreUsu" class="control-label">Nombre de Usuario</label>
                <input asp-for="NombreUsu" class="form-control" />
                <span asp-validation-for="NombreUsu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveUsu" class="control-label">Contraseña</label>
                <input asp-for="ClaveUsu" class="form-control" />
                <span asp-validation-for="ClaveUsu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label">Fecha de Creación</label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RolesUsu" class="control-label">Roles</label>
                @Html.DropDownList("RolesUsu", ViewBag.ListadoRoles, "--Elija un Rol--", new { @class ="form-select"} )
                <span asp-validation-for="RolesUsu" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <button type="button" class="btn btn-outline-danger"><a class="boton" asp-action="Index">Regresar</a></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
