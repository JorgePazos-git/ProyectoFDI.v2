@model ProyectoFDI.v2.Models.Deportistum

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<h1>DETALLES</h1>

<div>
    <h4>Deportista</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombres
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombresDep)
        </dd>
        <dt class = "col-sm-2">
            Apellidos
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApellidosDep)
        </dd>
        <dt class = "col-sm-2">
            Cédula
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CedulaDep)
        </dd>
        <dt class = "col-sm-2">
            Categoría
        </dt>
        <dd class = "col-sm-10">
            @for (var i = 0; i < ViewBag.ListaCategorias.Count; i++)
            {
                if (Model.IdCat == (ViewBag.ListaCategorias[i]).IdCat)
                {
                    <p>
                        @((ViewBag.ListaCategorias[i]).NombreCat)
                    </p>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            Club
        </dt>
        <dd class = "col-sm-10">
            @for (var i = 0; i < ViewBag.ListaClubes.Count; i++)
            {
                if (Model.IdClub == (ViewBag.ListaClubes[i]).IdClub)
                {
                    <p>
                        @((ViewBag.ListaClubes[i]).NombreClub)
                    </p>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            Entrenador
        </dt>
        <dd class = "col-sm-10">
            @for (var i = 0; i < ViewBag.ListaEntrenadores.Count; i++)
            {
                if (Model.IdEnt == (ViewBag.ListaEntrenadores[i]).IdEnt)
                {
                    <p>
                        @((ViewBag.ListaEntrenadores[i]).NombresEnt)
                        @((ViewBag.ListaEntrenadores[i]).ApellidosEnt)
                    </p>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            Género
        </dt>
        <dd class = "col-sm-10">
            @for (var i = 0; i < ViewBag.ListaGeneros.Count; i++)
            {
                if (Model.IdGen == (ViewBag.ListaGeneros[i]).IdGen)
                {
                    <p>
                        @((ViewBag.ListaGeneros[i]).NombreGen)
                    </p>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            Provincia
        </dt>
        <dd class = "col-sm-10">
            @for (var i = 0; i < ViewBag.ListaProvincias.Count; i++)
            {
                if (Model.IdPro == (ViewBag.ListaProvincias[i]).IdPro)
                {
                    <p>
                        @((ViewBag.ListaProvincias[i]).NombrePro)
                    </p>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            Usuario
        </dt>
        <dd class = "col-sm-10">
            @for (var i = 0; i < ViewBag.ListaUsuarios.Count; i++)
            {
                if (Model.IdUsu == (ViewBag.ListaUsuarios[i]).IdUsu)
                {
                    <p>
                        @((ViewBag.ListaUsuarios[i]).NombreUsu)
                    </p>
                }
            }
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @if (Model.ActivoDep == true)
            {
                <p>Activo</p>
            }
            else
            {
                <p>Inactivo</p>
            }
        </dd>
    </dl>
</div>
<br />
<div>
    <button type="button" class="btn btn-outline-warning"><a class="boton" asp-action="Edit" asp-route-id="@Model?.IdDep">Editar</a></button>
    <button type="button" class="btn btn-outline-danger"><a class="boton" asp-action="Index">Regresar</a></button>
</div>


