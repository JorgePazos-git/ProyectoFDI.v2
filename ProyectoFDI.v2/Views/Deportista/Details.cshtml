@model ProyectoFDI.v2.Models.Deportistum

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<h1>DETALLES</h1>

<div>
    <h4>Deportista</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombres
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombresDep)
        </dd>
        <dt class = "col-sm-2">
            Apellidos
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApellidosDep)
        </dd>
        <dt class = "col-sm-2">
            Cédula
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CedulaDep)
        </dd>
        <dt class = "col-sm-2">
            Categoría
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCatNavigation.NombreCat)
        </dd>
        <dt class = "col-sm-2">
            Club
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdClubNavigation.NombreClub)
        </dd>
        <dt class = "col-sm-2">
            Entrenador
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEntNavigation.NombresEnt) @Html.DisplayFor(model => model.IdEntNavigation.ApellidosEnt)
        </dd>
        <dt class = "col-sm-2">
            Género
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdGenNavigation.NombreGen)
        </dd>
        <dt class = "col-sm-2">
            Provincia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdProNavigation.NombrePro)
        </dd>
        <dt class = "col-sm-2">
            Usuario
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUsuNavigation.NombreUsu)
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivoDep)
        </dd>
    </dl>
</div>
<br />
<div>
    <button type="button" class="btn btn-outline-warning"><a class="boton" asp-action="Edit" asp-route-id="@Model?.IdDep">Editar</a></button>
    <button type="button" class="btn btn-outline-danger"><a class="boton" asp-action="Index">Regresar</a></button>
</div>


