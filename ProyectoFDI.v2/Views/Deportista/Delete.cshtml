@model ProyectoFDI.v2.Models.Deportistum

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<h1>ELIMINAR</h1>

<h3>¿Estás seguro de eliminar a este Deportista?</h3>
<div>
    <h4>Deportista</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombres
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombresDep)
        </dd>
        <dt class = "col-sm-2">
            Apellidos
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApellidosDep)
        </dd>
        <dt class = "col-sm-2">
            Cédula
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CedulaDep)
        </dd>
        <dt class = "col-sm-2">
            Categoría
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCatNavigation.NombreCat)
        </dd>
        <dt class = "col-sm-2">
            Club
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdClubNavigation.NombreClub)
        </dd>
        <dt class = "col-sm-2">
            Entrenador
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEntNavigation.NombresEnt) @Html.DisplayFor(model => model.IdEntNavigation.ApellidosEnt)
        </dd>
        <dt class = "col-sm-2">
            Género
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdGenNavigation.NombreGen)
        </dd>
        <dt class = "col-sm-2">
            Provincia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdProNavigation.NombrePro)
        </dd>
        <dt class = "col-sm-2">
            Usuario
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUsuNavigation.NombreUsu)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="form-eliminar">
        <input type="hidden" asp-for="IdDep" />
        <input type="submit" value="Delete" class="btn btn-outline-secondary" />
        <button type="button" class="btn btn-outline-danger"><a class="boton" asp-action="Index">Regresar</a></button>
    </form>
</div>

<script>
    $('.form-eliminar').submit(function(e){
        e.preventDefault();

        Swal.fire({
            title: '¿Está seguro de eliminarlo?',
            text: "No se podrá revertir!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Eliminar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire(
                    'Eliminado!',
                    'success'
                )
                this.submit();

            }
        })
    });
    
</script>

