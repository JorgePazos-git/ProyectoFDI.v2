@model ProyectoFDI.v2.Models.Sede

@{
    ViewData["Title"] = "Delete";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<h1>ELIMINAR</h1>

<h3>¿Estás seguro de eliminar esta Sede?</h3>
<div>
    <h4>Sede</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre de Sede
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreSede)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdSede" />
        <input type="submit" value="Delete" class="btn btn-outline-secondary" />
        <button type="button" class="btn btn-outline-danger"><a class="boton" asp-action="Index">Regresar</a></button>
    </form>
</div>
