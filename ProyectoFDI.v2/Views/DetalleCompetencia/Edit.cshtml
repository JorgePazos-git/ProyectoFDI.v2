@model ProyectoFDI.v2.Models.DetalleCompetencium

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<h1>EDITAR</h1>

<h4>Detalle de la Competencia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" name="returnTo" id="returnTo" value="@ViewBag.ReturnTo" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDetalle" />
            <div class="form-group">
                <input type="hidden" asp-for="Puesto" class="form-control" />
                <span asp-validation-for="Puesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden"  asp-for="ClasRes" class="form-control" />
                <span asp-validation-for="ClasRes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="FinalRes" class="form-control" />
                <span asp-validation-for="FinalRes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDep" class="control-label">Deportista</label>
                @Html.DropDownList("IdDep", ViewBag.ListaDeportistas, "--Elija un Deportista--", new{@class="form-select"})
                <span asp-validation-for="IdDep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCom" class="control-label"></label>
                @Html.DropDownList("IdCom", ViewBag.ListaCompetencias, "--Elija una Competencia--", new{@class="form-select", disabled="disabled"})
                <span asp-validation-for="IdCom" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <button type="button" class="btn btn-outline-danger"><a class="boton" asp-action="Index">Regresar</a></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
