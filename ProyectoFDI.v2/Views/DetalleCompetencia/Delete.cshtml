@model ProyectoFDI.v2.Models.DetalleCompetencium

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<h1>ELIMINAR</h1>

<h3>¿Estás seguro de eliminar este Detalle?</h3>
<div>
    <h4>DetalleCompetencium</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Competencia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdComNavigation.NombreCom)
        </dd>
        <dt class = "col-sm-2">
            Deportista
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdDepNavigation.NombresDep) @Html.DisplayFor(model => model.IdDepNavigation.ApellidosDep)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" name="returnTo" id="returnTo" value="@ViewBag.ReturnTo" />
        <input type="hidden" asp-for="IdDetalle" />
        <input type="submit" value="Delete" class="btn btn-outline-secondary" />
        <button type="button" class="btn btn-outline-danger"><a class="boton" asp-action="Index">Regresar</a></button>
    </form>
</div>
