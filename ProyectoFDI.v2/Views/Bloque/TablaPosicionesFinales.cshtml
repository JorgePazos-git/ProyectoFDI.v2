@{
    var listadoPuntajeBloque = ViewBag.ListadoPosicionesClasificatoria as List<VistaPuntajesDeportista>;
    int aux = 1;
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tu Título</title>
    <!-- Agrega la siguiente línea para cargar los estilos de Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">    <!-- Agrega aquí cualquier otro enlace a hojas de estilo CSS -->
</head>
<div id="etiquetaContainer">
    <span class="bg-danger px-3 py-2 rounded-pill text-white" style="font-size: 16px; font-weight: bold;">Fase Final</span>
</div>
<div class="d-flex justify-content-center mt-4">
    <div class="btn-group" role="group" aria-label="Navegación">
        <a type="button" class="btn btn-outline-danger" asp-action="AgregarResultadosFinales" asp-route-id="@ViewBag.idcompetenciav">Agregar Resultados</a>
        <a type="button" class="btn btn-outline-danger" asp-action="TablaResultadosFinales" asp-route-idcompetenciav="@ViewBag.idcompetenciav">Tabla Resultados</a>
        <button type="button" class="btn btn-outline-danger active">Tabla Posiciones</button>
    </div>
</div>

<a href="@Url.Action("MostrarPDFNuevaPagina", "Bloque", new { competencia = ViewBag.idcompetenciav })" class="btn btn-danger" target="_blank">
    <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @@fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path fill="#ffffff" d="M64 464l48 0 0 48-48 0c-35.3 0-64-28.7-64-64L0 64C0 28.7 28.7 0 64 0L229.5 0c17 0 33.3 6.7 45.3 18.7l90.5 90.5c12 12 18.7 28.3 18.7 45.3L384 304l-48 0 0-144-80 0c-17.7 0-32-14.3-32-32l0-80L64 48c-8.8 0-16 7.2-16 16l0 384c0 8.8 7.2 16 16 16zM176 352l32 0c30.9 0 56 25.1 56 56s-25.1 56-56 56l-16 0 0 32c0 8.8-7.2 16-16 16s-16-7.2-16-16l0-48 0-80c0-8.8 7.2-16 16-16zm32 80c13.3 0 24-10.7 24-24s-10.7-24-24-24l-16 0 0 48 16 0zm96-80l32 0c26.5 0 48 21.5 48 48l0 64c0 26.5-21.5 48-48 48l-32 0c-8.8 0-16-7.2-16-16l0-128c0-8.8 7.2-16 16-16zm32 128c8.8 0 16-7.2 16-16l0-64c0-8.8-7.2-16-16-16l-16 0 0 96 16 0zm80-112c0-8.8 7.2-16 16-16l48 0c8.8 0 16 7.2 16 16s-7.2 16-16 16l-32 0 0 32 32 0c8.8 0 16 7.2 16 16s-7.2 16-16 16l-32 0 0 48c0 8.8-7.2 16-16 16s-16-7.2-16-16l0-64 0-64z" /></svg>    Reporte
</a>

<table class="table table-bordered table-hover text-center">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Puesto</th>
            <th scope="col">Deportista</th>
            <th scope="col">Tops Realizados</th>
            <th scope="col">Intentos Top</th>
            <th scope="col">Zonas Realizadas</th>
            <th scope="col">Intentos Zona</th>
            <!-- Agrega más columnas según sea necesario -->
        </tr>
    </thead>
    <tbody>
        @foreach (var registro in listadoPuntajeBloque)
        {
            <tr class="@((aux == 1) ? "bg-light shadow" : "")">
                <td>
                    @if (aux == 1)
                    {
                        <span class="text-success font-weight-bold">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" width="30" height="30">
                                <path fill="#FFD43B" d="M400 0H176c-26.5 0-48.1 21.8-47.1 48.2c.2 5.3 .4 10.6 .7 15.8H24C10.7 64 0 74.7 0 88c0 92.6 33.5 157 78.5 200.7c44.3 43.1 98.3 64.8 138.1 75.8c23.4 6.5 39.4 26 39.4 45.6c0 20.9-17 37.9-37.9 37.9H192c-17.7 0-32 14.3-32 32s14.3 32 32 32H384c17.7 0 32-14.3 32-32s-14.3-32-32-32H357.9C337 448 320 431 320 410.1c0-19.6 15.9-39.2 39.4-45.6c39.9-11 93.9-32.7 138.2-75.8C542.5 245 576 180.6 576 88c0-13.3-10.7-24-24-24H446.4c.3-5.2 .5-10.4 .7-15.8C448.1 21.8 426.5 0 400 0zM48.9 112h84.4c9.1 90.1 29.2 150.3 51.9 190.6c-24.9-11-50.8-26.5-73.2-48.3c-32-31.1-58-76-63-142.3zM464.1 254.3c-22.4 21.8-48.3 37.3-73.2 48.3c22.7-40.3 42.8-100.5 51.9-190.6h84.4c-5.1 66.3-31.1 111.2-63 142.3z" />
                            </svg>
                        </span>
                    }
                    else
                    {
                        <span class="font-weight-bold">@aux</span>
                    }
                </td>
                <td>@registro.NombreDep</td>
                <td>@registro.TopsRealizados</td>
                <td>@registro.IntentosTops</td>
                <td>@registro.ZonasRealizadas</td>
                <td>@registro.IntentosZonas</td>
                <!-- Agrega más columnas según sea necesario -->
            </tr>
            aux++;
        }
    </tbody>
</table>

<div class="text-center mt-4">
</div>
