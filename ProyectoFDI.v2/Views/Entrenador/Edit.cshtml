@model ProyectoFDI.v2.Models.Entrenador

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<h1>EDITAR</h1>

<h4>Entrenador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEnt" />
            <div class="form-group">
                <label asp-for="NombresEnt" class="control-label">Nombres</label>
                <input asp-for="NombresEnt" class="form-control" />
                <span asp-validation-for="NombresEnt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidosEnt" class="control-label">Apellidos</label>
                <input asp-for="ApellidosEnt" class="form-control" />
                <span asp-validation-for="ApellidosEnt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CedulaEnt" class="control-label">Cédula</label>
                <input asp-for="CedulaEnt" class="form-control" />
                <span asp-validation-for="CedulaEnt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPro" class="control-label">Provincia</label>
                @Html.DropDownList("IdPro", ViewBag.ListaProvincias, "--Elija la Provincia--", new{@class="form-select"})
                <span asp-validation-for="IdPro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsu" class="control-label">Usuario</label>
                @Html.DropDownList("IdUsu" , ViewBag.ListaUsuarios, "--Elija un Usuario--", new{@class ="form-select"})
                <span asp-validation-for="IdUsu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivoEnt" class="control-label">Estado</label>
                @Html.DropDownList("ActivoEnt" , ViewBag.ListaEstados, "--Elija un Estado--", new{@class ="form-select"})
                <span asp-validation-for="ActivoEnt" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <button type="button" class="btn btn-outline-danger"><a class="boton" asp-action="Index">Regresar</a></button>
            </div>
        </form>
    </div>
</div>

