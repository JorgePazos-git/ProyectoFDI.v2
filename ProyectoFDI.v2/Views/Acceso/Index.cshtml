@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" />
    <link href="~/css/botonInvitados.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/limonte-sweetalert2/sweetalert2.min.css" />

</head>
<body>

    <div class="page">
        <div class="container">
            <script src="~/lib/limonte-sweetalert2/sweetalert2.min.js" asp-append-version="true"></script>


            <div class="left">
                <div class="login">Login</div>
                <div class="eula">
                    SISTEMATIZACION DEL REGISTRO, RESULTADOS E HISTORIAL DE COMPETENCIAS DE
                    ESCALADA DEPORTIVA
                </div>
            </div>
            <div class="right">
                <svg viewBox="0 0 320 300">
                    <defs>
                        <linearGradient inkscape:collect="always"
                                        id="linearGradient"
                                        x1="13"
                                        y1="193.49992"
                                        x2="307"
                                        y2="193.49992"
                                        gradientUnits="userSpaceOnUse">
                            <stop style="stop-color:lawngreen;"
                                  offset="0"
                                  id="stop876" />
                            <stop style="stop-color:lightseagreen;"
                                  offset="1"
                                  id="stop878" />
                        </linearGradient>
                    </defs>
                    <path d="m 40,120.00016 239.99984,-3.2e-4 c 0,0 24.99263,0.79932 25.00016,35.00016 0.008,34.20084 -25.00016,35 -25.00016,35 h -239.99984 c 0,-0.0205 -25,4.01348 -25,38.5 0,34.48652 25,38.5 25,38.5 h 215 c 0,0 20,-0.99604 20,-25 0,-24.00396 -20,-25 -20,-25 h -190 c 0,0 -20,1.71033 -20,25 0,24.00396 20,25 20,25 h 168.57143" />
                </svg>
                <form asp-controller="Acceso" asp-action="Index" method="post">
                    <div class="form">
                        <label for="email">Usuario</label>
                        <input id="txtUsuario" type="text" placeholder="Username" asp-for="NombreUsu" name="NombreUsu">
                        <label for="password">Password</label>
                        <input id="txtClave" type="password" placeholder="Password" asp-for="ClaveUsu" name="ClaveUsu">
                        <input type="submit" id="btnEntrar" value="Entrar">
                    </div>
                </form>
            </div>
        </div>
        <div class="container">
            <button class="button">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Invitados</a>
            </button>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/limonte-sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/Login.js"></script>
    <script src="~/js/efectoLogin.js"></script>
    <script src="~/lib/animejs/anime.js"></script>
</body>
</html>
<partial name="_NotificationPartial" />
